<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/nameSetter"
        android:text="Welcome to the Чатик"
        android:textSize="50sp"/>

    <EditText
        android:id="@+id/nameSetter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hint = "Please enter your name here"
        android:gravity="center"/>

    <Button
        android:id = "@+id/setName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "Connect to the chat"
        app:layout_constraintTop_toBottomOf="@+id/nameSetter"/>
</androidx.constraintlayout.widget.ConstraintLayout>